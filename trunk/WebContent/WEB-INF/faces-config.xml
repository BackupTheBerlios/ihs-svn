<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE faces-config PUBLIC
          "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
          "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config>
	<render-kit>
		<renderer>
			<component-family>javax.faces.Output</component-family>
			<renderer-type>com.corejsf.Pager</renderer-type>
			<renderer-class>com.corejsf.PagerRenderer</renderer-class>
		</renderer>
	</render-kit>
	<navigation-rule>
		<from-view-id>/administrators.jsp</from-view-id>
		<navigation-case>
			<from-outcome>addAdministrator</from-outcome>
			<to-view-id>/addAdministrator.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>reload</from-outcome>
			<to-view-id>/administrators.jsp</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>editAdministrator</from-outcome>
			<to-view-id>/addAdministrator.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/mailservice/domains.jsp</from-view-id>
		<navigation-case>
			<from-outcome>addDomain</from-outcome>
			<to-view-id>/mailservice/addDomain.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>reload</from-outcome>
			<to-view-id>/mailservice/domains.jsp</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>editDomain</from-outcome>
			<to-view-id>/mailservice/addDomain.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>listUsers</from-outcome>
			<to-view-id>/mailservice/users.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/mailservice/users.jsp</from-view-id>
		<navigation-case>
			<from-outcome>addUser</from-outcome>
			<to-view-id>/mailservice/addUser.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>reload</from-outcome>
			<to-view-id>/mailservice/users.jsp</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>editUser</from-outcome>
			<to-view-id>/mailservice/addUser.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<managed-bean>
		<managed-bean-name>backing_administrators</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.backing.Administrators</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>backing_addAdministrator</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.backing.AddAdministrator</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<from-view-id>/addAdministrator.jsp</from-view-id>
		<navigation-case>
			<from-outcome>cancel</from-outcome>
			<to-view-id>/administrators.jsp</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/mailservice/addUser.jsp</from-view-id>
		<navigation-case>
			<from-outcome>cancel</from-outcome>
			<to-view-id>/mailservice/users.jsp</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/mailservice/addDomain.jsp</from-view-id>
		<navigation-case>
			<from-outcome>cancel</from-outcome>
			<to-view-id>/mailservice/domains.jsp</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	<application>
		<message-bundle>com.foo_baz.ihs.application</message-bundle>
	</application>
	<managed-bean>
		<managed-bean-name>backing_domains</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.backing.mailservice.Domains</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>backing_addDomain</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.backing.mailservice.AddDomain</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>backing_addUser</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.backing.mailservice.AddUser</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>backing_users</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.backing.mailservice.Users</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>config</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.Configuration</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
</faces-config>
