<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN" "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>
	<render-kit>
		<renderer>
			<component-family>javax.faces.Output</component-family>
			<renderer-type>com.corejsf.Pager</renderer-type>
			<renderer-class>com.corejsf.PagerRenderer</renderer-class>
		</renderer>
	</render-kit>
	<navigation-rule>
		<from-view-id>/protected/administrators.jsp</from-view-id>
		<navigation-case>
			<from-outcome>addAdministrator</from-outcome>
			<to-view-id>/protected/addAdministrator.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>reload</from-outcome>
			<to-view-id>/protected/administrators.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>editAdministrator</from-outcome>
			<to-view-id>/protected/addAdministrator.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/protected/mailservice/domains.jsp</from-view-id>
		<navigation-case>
			<from-outcome>addDomain</from-outcome>
			<to-view-id>/protected/mailservice/addDomain.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>reload</from-outcome>
			<to-view-id>/protected/mailservice/domains.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>editDomain</from-outcome>
			<to-view-id>/protected/mailservice/addDomain.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>listUsers</from-outcome>
			<to-view-id>/protected/mailservice/users.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/protected/mailservice/users.jsp</from-view-id>
		<navigation-case>
			<from-outcome>addUser</from-outcome>
			<to-view-id>/protected/mailservice/addUser.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>reload</from-outcome>
			<to-view-id>/protected/mailservice/users.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>editUser</from-outcome>
			<to-view-id>/protected/mailservice/addUser.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>editDomain</from-outcome>
			<to-view-id>/protected/mailservice/addDomain.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<managed-bean><description>Logic behind administrators.jsp</description>
		<managed-bean-name>backing_administrators</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.backing.Administrators</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean><description>Logic behind addAdministrator.jsp</description>
		<managed-bean-name>backing_addAdministrator</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.backing.AddAdministrator</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean><description>Bean used to setup locale</description>
		<managed-bean-name>locale</managed-bean-name>
		<managed-bean-class>com.foo_baz.util.faces.ChangeLocaleBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<navigation-case>
			<from-outcome>gotoConfiguration</from-outcome>
			<to-view-id>/protected/configuration.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>gotoDefault</from-outcome>
			<to-view-id>/protected/administrators.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>gotoAdministrators</from-outcome>
			<to-view-id>/protected/administrators.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>addAdministrator</from-outcome>
			<to-view-id>/protected/addAdministrator.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>gotoMailServiceDomains</from-outcome>
			<to-view-id>/protected/mailservice/domains.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>addDomain</from-outcome>
			<to-view-id>/protected/mailservice/addDomain.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>gotoMailServiceLogs</from-outcome>
			<to-view-id>/protected/mailservice/logs.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>gotoLogin</from-outcome>
			<to-view-id>/login.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/protected/addAdministrator.jsp</from-view-id>
		<navigation-case>
			<from-outcome>cancel</from-outcome>
			<to-view-id>/protected/administrators.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/protected/mailservice/addUser.jsp</from-view-id>
		<navigation-case>
			<from-outcome>cancel</from-outcome>
			<to-view-id>/protected/mailservice/users.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>editDomain</from-outcome>
			<to-view-id>/protected/mailservice/addDomain.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/protected/mailservice/addDomain.jsp</from-view-id>
		<navigation-case>
			<from-outcome>cancel</from-outcome>
			<to-view-id>/protected/mailservice/domains.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>listUsers</from-outcome>
			<to-view-id>/protected/mailservice/users.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<application>
		<message-bundle>com.foo_baz.ihs.application</message-bundle>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>pl</supported-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
	</application>
	<managed-bean><description>Logic behind mailservice/domains.jsp</description>
		<managed-bean-name>backing_domains</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.backing.mailservice.Domains</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean><description>Logic behind mailservice/addDomain.jsp</description>
		<managed-bean-name>backing_addDomain</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.backing.mailservice.AddDomain</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean><description>Logic behind mailservice/addUser.jsp</description>
		<managed-bean-name>backing_addUser</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.backing.mailservice.AddUser</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean><description>Logic behind mailservice/users.jsp</description>
		<managed-bean-name>backing_users</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.backing.mailservice.Users</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean><description>Logic behind configuration.jsp</description>
		<managed-bean-name>backing_configuration</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.backing.Configuration</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean><description>Logic behind mailservice/logs.jsp</description>
		<managed-bean-name>backing_logs</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.backing.mailservice.Logs</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<from-view-id>/protected/mailservice/logs.jsp</from-view-id>
		<navigation-case>
			<from-outcome>reload</from-outcome>
			<to-view-id>/protected/mailservice/logs.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<managed-bean>
		<description>Common logic for mailservice/*.jsp</description>
		<managed-bean-name>backing_mailService</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.backing.mailservice.MailServiceSession</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>Common logic for *.jsp</description>
		<managed-bean-name>backing_ihs</managed-bean-name>
		<managed-bean-class>com.foo_baz.ihs.backing.IncredibleHostingSystemSession</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
</faces-config>

